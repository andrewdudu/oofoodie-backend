pipeline {
    agent {
        label "dockerworker"
    }
    stages {
        stage('Build') {
            steps {
                dir("app") {
                    sh 'mvn clean package -Dmaven.test.skip=true'
                }
            }
        }
        stage('Build image') {
            steps {
                dir("app") {
                    sh 'docker build -t oofoodie .'
                }
            }
        }
        stage('Run app') {
            steps {
                dir("app") {
                    sh 'docker run -p 8989:8080 oofoodie'
                }
            }
        }
    }
    post {
        always {
            deleteDir()
        }
    }
}