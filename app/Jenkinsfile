pipeline {
    agent {
        label "dockerworker"
    }
    stages {
        stage('Build') {
            steps {
                dir("app") {
                    sh 'mvn clean package -Dmaven.test.skip=true'
                }
            }
        }
        stage('Test') {
            steps {
                dir("app") {
                    sh 'mvn test'
                }
            }
            post {
                always {
                    junit 'app/target/surefire-reports/*.xml'
                }
            }
        }
        stage('Build image') {
            steps {
                dir("app") {
                    sh 'docker build -t my-app .'
                }
            }
        }
        stage('Run app') {
            steps {
                dir("app") {
                    sh 'docker run my-app'
                }
            }
        }
    }
    post {
        always {
            deleteDir()
        }
    }
}